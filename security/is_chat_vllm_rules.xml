<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Chaque utilisateur ne voit que ses propres chats -->
        <record id="is_chat_vllm_rule_own" model="ir.rule">
            <field name="name">Chat VLLM : voir uniquement ses propres chats</field>
            <field name="model_id" ref="model_is_chat_vllm"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- L'admin voit tout -->
        <record id="is_chat_vllm_rule_admin" model="ir.rule">
            <field name="name">Chat VLLM : acc√®s complet pour l'admin</field>
            <field name="model_id" ref="model_is_chat_vllm"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
