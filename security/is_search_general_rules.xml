<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ================================================ -->
        <!-- Règle : Administrateur IA - Accès à tout        -->
        <!-- ================================================ -->
        <record id="is_search_general_admin_rule" model="ir.rule">
            <field name="name">Administrateur IA - Accès complet</field>
            <field name="model_id" ref="model_is_search_general"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_ia_admin'))]"/>
        </record>

        <!-- ================================================ -->
        <!-- Règle : Recherche générale - Mes recherches     -->
        <!-- ================================================ -->
        <record id="is_search_general_user_rule" model="ir.rule">
            <field name="name">Recherche générale - Mes recherches uniquement</field>
            <field name="model_id" ref="model_is_search_general"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_ia_recherche_generale'))]"/>
        </record>

    </data>
</odoo>
