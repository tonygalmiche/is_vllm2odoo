<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Séquence -->
    <record id="seq_is_search_general" model="ir.sequence">
        <field name="name">Recherche Générale</field>
        <field name="code">is.search.general</field>
        <field name="prefix">RG</field>
        <field name="padding">5</field>
    </record>

    <!-- Vue Kanban -->
    <record id="is_search_general_kanban" model="ir.ui.view">
        <field name="name">is.search.general.kanban</field>
        <field name="model">is.search.general</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="question"/>
                <field name="model_id"/>
                <field name="view_type"/>
                <field name="domain"/>
                <field name="nb_results"/>
                <field name="temps_reponse"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top mb-2">
                                <div class="o_kanban_record_headings">
                                    <span t-if="record.model_id.raw_value" 
                                          class="badge badge-pill"
                                          t-attf-style="background-color: #{record.model_id.raw_value % 10 == 0 ? '#17a2b8' : record.model_id.raw_value % 10 == 1 ? '#28a745' : record.model_id.raw_value % 10 == 2 ? '#ffc107' : record.model_id.raw_value % 10 == 3 ? '#dc3545' : record.model_id.raw_value % 10 == 4 ? '#6f42c1' : record.model_id.raw_value % 10 == 5 ? '#fd7e14' : record.model_id.raw_value % 10 == 6 ? '#20c997' : record.model_id.raw_value % 10 == 7 ? '#e83e8c' : record.model_id.raw_value % 10 == 8 ? '#6610f2' : '#007bff'}; color: white; font-weight: bold;">
                                        <field name="model_id"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_title" style="margin-left: auto;">
                                    <button t-if="record.nb_results.raw_value" 
                                            name="action_open_results" 
                                            type="object" 
                                            class="btn btn-link p-0"
                                            style="text-decoration: none;">
                                        <span style="margin-right: 5px;"><field name="nb_results"/></span>
                                        <span t-if="record.view_type.raw_value == 'graph'" 
                                              class="badge badge-pill" 
                                              style="background-color: #17a2b8; color: white; font-weight: bold;">
                                            <i class="fa fa-bar-chart" title="Voir le graphique"/>
                                        </span>
                                        <span t-elif="record.view_type.raw_value == 'pivot'" 
                                              class="badge badge-pill" 
                                              style="background-color: #28a745; color: white; font-weight: bold;">
                                            <i class="fa fa-table" title="Voir le tableau croisé"/>
                                        </span>
                                        <span t-else="" 
                                              class="badge badge-pill" 
                                              style="background-color: #6c757d; color: white; font-weight: bold;">
                                            <i class="fa fa-list" title="Voir la liste"/>
                                        </span>
                                    </button>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div style="background-color: #f5f5f5; padding: 8px; border-radius: 4px; margin-bottom: 8px;">
                                    <strong><field name="question"/></strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Search -->
    <record id="is_search_general_search" model="ir.ui.view">
        <field name="name">is.search.general.search</field>
        <field name="model">is.search.general</field>
        <field name="arch" type="xml">
            <search string="Recherche générale">
                <field name="question" string="Recherche" filter_domain="[('question', 'ilike', self)]"/>
                <field name="model_id" string="Modèle"/>
                <field name="name" string="Numéro"/>
                <filter name="my_searches" string="Mes recherches" domain="[('create_uid', '=', uid)]"/>
                <separator/>
                <filter name="group_by_model" string="Modèle" context="{'group_by': 'model_id'}"/>
                <filter name="group_by_view_type" string="Type de vue" context="{'group_by': 'view_type'}"/>
            </search>
        </field>
    </record>

    <!-- Vue Tree -->
    <record id="is_search_general_tree" model="ir.ui.view">
        <field name="name">is.search.general.tree</field>
        <field name="model">is.search.general</field>
        <field name="arch" type="xml">
            <tree string="Recherche générale">
                <field name="model_id"/>
                <field name="question"/>
                <field name="view_type"     optional="show"/>
                <field name="group_by"      optional="hide"/>
                <field name="domain"        optional="hide"/>
                <field name="temps_reponse" optional="hide"/>
                <field name="create_date"   optional="hide" string="Créé le"/>
                <field name="create_uid"    optional="hide" string="Créé par"/>
                <field name="write_date"    optional="hide" string="Modifié le"/>
                <field name="write_uid"     optional="hide" string="Modifié par"/>
            </tree>
        </field>
    </record>

    <!-- Vue Form -->
    <record id="is_search_general_form" model="ir.ui.view">
        <field name="name">is.search.general.form</field>
        <field name="model">is.search.general</field>
        <field name="arch" type="xml">
            <form string="Recherche générale">
                <header>
                    <button name="action_search"
                            type="object"
                            string="Actualiser la recherche"
                            class="oe_highlight"
                            icon="fa-search"/>
                    <button name="action_open_results"
                            type="object"
                            string="Voir le résultat"
                            icon="fa-list"
                            attrs="{'invisible': [('domain', '=', False)]}"/>
                    <button name="action_save_as_filter"
                            type="object"
                            string="Enregistrer comme favori"
                            icon="fa-star"
                            attrs="{'invisible': ['|', ('domain', '=', False), ('filter_id', '!=', False)]}"/>
                    <button name="action_save_as_filter"
                            type="object"
                            string="Mettre à jour le favori"
                            icon="fa-star"
                            attrs="{'invisible': ['|', ('domain', '=', False), ('filter_id', '=', False)]}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="question"
                               placeholder="Ex: Liste des factures de ce mois, Contacts à Lyon, Commandes confirmées..."
                               widget="text"/>
                    </group>
                    <group>
                        <group>
                            <field name="model_id"
                                   placeholder="Laisser vide pour détection automatique par IA"
                                   options="{'no_create': True}"/>

                            <field name="view_type"
                                   placeholder="Laisser vide pour détection automatique par IA"/>
 

                        </group>
                    </group>
                    <notebook attrs="{'invisible': [('domain', '=', False)]}">
                        <page string="Recherche" name="result">
                            <separator string="Domaine de recherche"/>
                            <field name="domain" widget="domain" options="{'model': 'model_name'}"/>
                            <group>
                                <field name="group_by"
                                    placeholder="Ex: create_date:year, partner_id..."
                                    attrs="{'invisible': [('view_type', 'not in', ['graph', 'pivot'])]}"/>
                            </group>
                        </page>
                        <page string="Détails techniques" name="technical">

                            <group>
                                <group>
                                    <field name="model_name"/>
                                    <field name="nb_results"/>
                                    <field name="filter_id" attrs="{'invisible': [('filter_id', '=', False)]}"/>
                                </group>
                            </group>



                            <group string="Paramètres de vue">
                                <group>
                                    <field name="view_type"/>
                                    <field name="group_by" 
                                           placeholder="Ex: create_date:year, partner_id..."
                                           attrs="{'invisible': [('view_type', 'not in', ['graph', 'pivot'])]}"/>
                                </group>
                                <group>
                                    <field name="temps_reponse"/>
                                </group>
                            </group>
                            <group string="Réponses IA" attrs="{'invisible': [('vllm_model_response', '=', False), ('vllm_domain_response', '=', False)]}">
                                <field name="vllm_model_response" attrs="{'invisible': [('vllm_model_response', '=', False)]}"/>
                                <field name="vllm_domain_response" attrs="{'invisible': [('vllm_domain_response', '=', False)]}"/>
                                <field name="vllm_view_type_response" attrs="{'invisible': [('vllm_view_type_response', '=', False)]}"/>
                                <field name="vllm_group_by_response" attrs="{'invisible': [('vllm_group_by_response', '=', False)]}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="is_search_general_action" model="ir.actions.act_window">
        <field name="name">Recherche générale</field>
        <field name="res_model">is.search.general</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_my_searches': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Lancer une recherche générale
            </p>
            <p>
                Décrivez ce que vous cherchez en langage naturel.
                L'IA identifiera le bon modèle et générera le filtre automatiquement.
            </p>
        </field>
    </record>

</odoo>
