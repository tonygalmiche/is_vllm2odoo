<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================ -->
    <!-- Onglet VLLM sur la fiche Société             -->
    <!-- ============================================ -->
    <record id="res_company_vllm_form" model="ir.ui.view">
        <field name="name">res.company.vllm.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="VLLM" name="vllm">
                    <group string="Connexion au serveur VLLM">
                        <group>
                            <field name="is_vllm_url" placeholder="http://mon-serveur:8000"/>
                            <field name="is_vllm_api_key" password="True"/>
                        </group>
                        <group>
                            <field name="is_vllm_model" placeholder="meta-llama/Llama-2-7b-chat-hf"/>
                            <field name="is_vllm_temperature"/>
                            <field name="is_vllm_max_tokens"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
